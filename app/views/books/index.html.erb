<body>
<h1>Books</h1>
  <table>
    <tr>
      <th>Title</th> <th>Body</th> <th colspan="3"></th>
    </tr>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "date-confirm" => "本当に削除しますか" %></td>
    </tr>
      <% end %>
  </table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: Book.new do |f| %>
  <div class="field"><h4>Title</h4></div>
  <%= f.text_field :title %>

  <div class="field"><h4>Body</h4></div>
  <%= f.text_area :body %>

  <div class="action"><%= f.submit 'Create Book' %></div>
<% end %>

</body>